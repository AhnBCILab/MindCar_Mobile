        <meta-data
            android:name="unity.build-id"
            android:value="212b1e7d-5c78-434d-92ad-a2a12f87b370" />
        <meta-data
            android:name="unity.splash-mode"
            android:value="0" />
        <meta-data
            android:name="unity.splash-enable"
            android:value="True" />
    </application>

